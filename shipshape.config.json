{
  "default": {
    "source": "./dist",
    "preDeploy": [
      "npm run build"
    ],
    "postDeploy": []
  },
  "environments": {
    "LOCAL": {
      "destination": "C:\\temp\\myapp-local",
      "postDeploy": [
        "echo Deployed to LOCAL environment for testing"
      ]
    },
    "DEVELOPMENT": {
      "destination": "C:\\inetpub\\wwwroot\\myapp-dev",
      "postDeploy": [
        "echo Deployed to DEVELOPMENT environment"
      ]
    },
    "STAGING": {
      "destination": "C:\\inetpub\\wwwroot\\myapp-staging",
      "preDeploy": [
        "npm run build",
        "npm run test"
      ],
      "postDeploy": [
        "echo Deployed to STAGING environment",
        "echo Running smoke tests..."
      ]
    },
    "INTEGRATION": {
      "destination": "C:\\inetpub\\wwwroot\\myapp-integration",
      "preDeploy": [
        "npm run build",
        "npm run test",
        "npm run e2e-test"
      ],
      "postDeploy": [
        "echo Deployed to INTEGRATION environment"
      ]
    },
    "PRODUCTION": {
      "destination": "C:\\inetpub\\wwwroot\\myapp-prod",
      "preDeploy": [
        "npm run build",
        "npm run test",
        "npm run lint",
        "npm run security-scan"
      ],
      "postDeploy": [
        "echo Deployed to PRODUCTION environment",
        "echo Creating backup timestamp...",
        "echo %date% %time% >> deployment.log"
      ]
    }
  }
}
